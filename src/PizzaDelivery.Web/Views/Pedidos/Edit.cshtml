@using PizzaDelivery.Core.Enums
@model PizzaDelivery.Core.Models.PedidoModel

@{
    ViewData["Title"] = "Atualizar Pedido";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-8 col-lg-4">
        <form asp-action="Atualizar">

            @Html.HiddenFor(model => model.Id)
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" disabled />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            
            <partial name="_Form"></partial>

            <br />
            <div class="form-group">
                <input type="submit" value="Atualizar Pedido" class="btn btn-primary" />
                <a class="btn btn-warning" asp-action="Listar">Voltar à Lista</a>
            </div>
        </form>
    </div>
</div>